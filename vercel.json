{
  "headers": [
    {
      "source": "/widget/:path*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/widget.js",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-summary",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/website-sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/check-gmail",
      "schedule": "* * * * *"
    }
  ]
}
